{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2020",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@fwg/utils/*": ["src/utils/*"],
      "@fwg/methods/*": ["src/methods/*"],
      "@fwg/types/*": ["src/types/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "examples/**/*",
    "eslint.config.ts"
  ]
}
