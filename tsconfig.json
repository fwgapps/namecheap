{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@fwg/utils/*": ["src/utils/*"],
      "@fwg/methods/*": ["src/methods/*"],
      "@fwg/types/*": ["src/types/*"]
    }
  },
  "include": ["src"]
}